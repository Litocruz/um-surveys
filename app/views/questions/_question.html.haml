#sortable	
	- @questions.each do |question|
		%tr{class: 'item', data: {item_id: "#{question.id}"}}
			//td=# question.position
			%td= question.type.split('::').last
			%td= link_to question.question_text.truncate(90), [:edit, question.survey, question]	
			%td=l question.created_at
			%td
				= link_to t('.edit', :default => t("helpers.links.edit")), [:edit, question.survey, question], :class => 'btn btn-mini'
				= link_to t('.destroy', :default => t("helpers.links.destroy")), [question.survey, question], :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'