- model_class = Question
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
= hidden_field_tag :direction, params[:direction]
= hidden_field_tag :sort, params[:sort]
= will_paginate @questions
%table.tablesorter#questionTable{:data => {update_url:reorder_survey_questions_path}}
  %thead
    %tr
      //th=# model_class.human_attribute_name(:position)
      %th= model_class.human_attribute_name(:type)
      %th= model_class.human_attribute_name(:question_text)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actiones")
  %tbody
    = render partial: "question"
= will_paginate @questions
= link_to t('.new', :default => t("helpers.links.new")), new_survey_question_path, :class => 'btn btn-primary btn-large'
= link_to t('.back', :default => t("helpers.links.back")), surveys_path, :class => 'btn'
