$("#surveyTable").each(function () {
   
    var tds = '<tr>';
    $("#<%= dom_id(@survey_old) %>").each(function () {
        tds += $(this).html();
    });
    tds += '</tr>';
    if ($('tbody', this).length > 0) {
        $('tbody', this).append(tds).effect("highlight", {}, 2000);
    } else {
        $(this).append(tds).effect("highlight", {}, 2000);
    }
});

