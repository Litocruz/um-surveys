- if user.admin?
	%tr.success
- else
	%tr
		%td= user.id
		%td= link_to user.name, user
		%td= user.admin
		%td= user.created_at
		%td
			= if current_user.admin? && !current_user?(user)
				= link_to t('.edit', :default => t("helpers.links.edit")), edit_user_path(user), :class => 'btn btn-mini'	
				- link_to "delete", user, method: :delete, class: "btn btn-small btn-danger", data: { confirm: "Esta seguro?" }