<% provide(:title, 'Editar') %>
<div class="page-header">
	<h1>Actualizar Perfil</h1>
</div>
    <%= simple_form_for(@user, :html => { :class => 'form-horizontal' }) do |f| %>
      <%= render 'fields', f: f %>
      <br /><br /><%= f.submit "Guardar cambios", class: "btn btn-large btn-primary" %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancelar")), users_path, :class => 'btn' %>
    <% end %>
