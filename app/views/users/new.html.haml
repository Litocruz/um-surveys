- provide(:title, 'Registrar')
.page-header
	%h1 Registrar
= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f|
	= render 'fields', f: f 
	%br.br
	= f.submit "Crear cuenta", class: "btn btn-large btn-primary"
	= link_to t('.cancel', :default => t("helpers.links.cancel")), users_path, :class => 'btn'
